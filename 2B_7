// WAP to accept a number and print it in reverse order.
#include <stdio.h>
#include <stdlib.h>
main()
{
    int number, remainder;
    printf("Enter a number:");
    scanf("%d", &number);
    printf("Reversing the digits of %d:", number);
    for(; number>0; number/=10)
    {
        remainder=number%10;
        printf("%d", remainder);
    }
}
