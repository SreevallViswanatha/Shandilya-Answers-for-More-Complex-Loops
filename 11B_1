// Write a program in C to display the pattern like right angle triangle with a number.
#include <stdio.h>
#include <stdlib.h>
main()
{
    int rows, i=1, j, k;
    printf("Enter the number of rows:");
    scanf("%d", &rows);
    for(; i<=rows; i++)
    {
        k=1;
        j=i;
        for(; j>0; j--)
        {
            printf("%d ", k);
            k++;
        }
        printf("\n");
    }
}
