// WAP to find the sum of first and last digit of a number.
#include <stdio.h>
#include <stdlib.h>
main()
{
    int number, first_digit, last_digit;
    printf("Enter a number:");
    scanf("%d", &number);
    last_digit=number%10;
    printf("The sum of the first digit and last digit of %d is:", number);
    for(; number>0; number/=10)
    {
        first_digit=number%10;
    }
    printf("%d", last_digit+first_digit);
}
