// Write a program in C to display the pattern like right angle triangle using an asterisk.
#include <stdio.h>
#include <stdlib.h>
main()
{
    int rows, i=1, j;
    printf("Enter the number of rows:");
    scanf("%d", &rows);
    for(; i<=rows; i++)
    {
        j=i;
        for(; j>0; j--)
        {
            printf("* ");
        }
        printf("\n");
    }
}
